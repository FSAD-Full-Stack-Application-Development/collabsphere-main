# CollabSphere Database Backup Cron Jobs
# 
# To install these cron jobs, run:
#   crontab -e
# Then add the following lines (adjust paths as needed):

# Daily backup at 2:00 AM UTC
0 2 * * * cd /root/collabsphere/backend && /root/collabsphere/backend/bin/backup

# Weekly rotation on Sundays at 3:00 AM UTC
0 3 * * 0 cd /root/collabsphere/backend && RAILS_ENV=production bundle exec rails db:backup:rotate

# Alternative: If using whenever gem, add to config/schedule.rb:
# every 1.day, at: '2:00 am' do
#   rake 'db:backup:create'
# end
#
# every :sunday, at: '3:00 am' do
#   rake 'db:backup:rotate'
# end
